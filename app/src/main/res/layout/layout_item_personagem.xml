<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="?android:attr/selectableItemBackground"
    android:id="@+id/layout_item_personagem"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_personagem_main"
        android:background="@android:color/white"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ProgressBar
        android:id="@+id/progress_personagens_item"
        app:layout_constraintTop_toTopOf="@+id/image_personagem_main"
        app:layout_constraintStart_toStartOf="@+id/image_personagem_main"
        app:layout_constraintBottom_toBottomOf="@+id/image_personagem_main"
        app:layout_constraintEnd_toEndOf="@+id/image_personagem_main"
        android:layout_width="0dp"
        android:layout_height="0dp" />


    <TextView
        android:textColor="@android:color/black"
        android:id="@+id/nome_personagem_main"
        android:textSize="20sp"
        android:layout_marginStart="8dp"
        android:text="@string/app_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/image_personagem_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/image_personagem_main"
        app:layout_constraintBottom_toBottomOf="@+id/image_personagem_main"/>

</androidx.constraintlayout.widget.ConstraintLayout>